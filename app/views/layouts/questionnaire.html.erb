<!DOCTYPE html>
<html>
  <head>
    <title>Waittap</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track' => true unless params[:modal].present? %>
    <%= javascript_include_tag 'modal', media: 'all', 'data-turbolinks-track' => true if params[:modal].present? %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>
  <body>
    <% unless params[:modal].present? %>
      <%= render 'layouts/nav' %>
    <% end %>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
        <div class="col-md-2"></div>
      </div>
  <% unless params[:modal].present? %>
    <%= render partial: "layouts/modal"%>
  <% end %>
  </body>
</html>
